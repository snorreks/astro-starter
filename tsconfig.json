{
  "compilerOptions": {
    "baseUrl": "src",

    "strict": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "jsx": "preserve",
    "jsxImportSource": "astro",
    "paths": {
      "$assets/*": ["lib/assets/*"],
      "$components/*": ["lib/components/*"],
      "$views/*": ["lib/views/*"],
      "$layouts/*": ["lib/layouts/*"],
      "$styles/*": ["lib/styles/*"],
      "$utils/*": ["lib/utils/*"],
      "$client/*": ["lib/client/*"],
      "$data/*": ["lib/data/*"],
      "$types": ["lib/types"]
    }
  },
  "exclude": ["dist", "node_modules"],
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "src",
    "test",
    "scripts",
    "astro.config.ts",
    "eslint.config.ts",
    "prettier.config.ts",
    "playwright.config.ts",
    "commitlint.config.ts"
  ]
}
