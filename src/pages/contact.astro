---
// src/pages/contact.astro
import ContactForm from '$components/functional/ContactForm.astro';
import ContactValue from '$components/ui/ContactValue.astro';
import contactsData from '$data/contacts.json';
import Layout from '$layouts/Layout.astro';

const contact = contactsData[0];
const address = contact
  ? `${contact.location.street}, ${contact.location.city}, ${contact.location.country}`
  : '';
---

<Layout title="Contact Us" description="Get in touch with us. We would love to hear from you.">
  <div class="bg-background">
    <div class="mx-auto max-w-7xl px-4 py-16 sm:px-6 lg:px-8 lg:py-24">
      <div class="text-center">
        <h1 class="text-foreground text-3xl font-extrabold sm:text-4xl">Contact Us</h1>
        <p class="text-muted-foreground mt-4 text-lg">
          We would love to hear from you. Please fill out the form below or reach out to us using
          the contact details.
        </p>
      </div>

      <div class="mt-12 grid grid-cols-1 gap-16 lg:grid-cols-2">
        {
          contact && (
            <div class="flex flex-col gap-8">
              <h2 class="text-foreground text-2xl font-bold">Our Contact Details</h2>
              <div class="space-y-4">
                <div class="border-border bg-secondary flex flex-col gap-4 rounded-lg border p-6">
                  <h3 class="text-foreground text-xl font-semibold">
                    {contact.general.fullName[1]}
                  </h3>
                  {contact.general.email[1] && (
                    <ContactValue type="email" label="Email" value={contact.general.email[1]} />
                  )}
                  {contact.general.phone[1] && (
                    <ContactValue type="tel" label="Phone" value={contact.general.phone[1]} />
                  )}
                  {address && <ContactValue type="address" label="Address" value={address} />}
                </div>
              </div>
            </div>
          )
        }

        <div>
          <h2 class="text-foreground text-2xl font-bold">Send us a message</h2>
          <ContactForm />
        </div>
      </div>
    </div>
  </div>
</Layout>
