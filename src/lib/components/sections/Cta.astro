---
// src/lib/components/sections/Cta.astro
import Button from '$components/ui/Button.astro';
---

<section class="bg-background">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8 lg:py-16">
    <div class="bg-secondary rounded-lg p-8 shadow-lg sm:p-12">
      <div class="flex flex-col items-center justify-between gap-8 sm:flex-row">
        <div class="text-center sm:text-left">
          <h2 class="text-foreground text-3xl font-extrabold">Ready to get started?</h2>
          <p class="text-muted-foreground mt-4 text-lg">
            Create an account today and start building faster websites.
          </p>
        </div>
        <div class="flex-shrink-0">
          <Button href="/contact" size="lg" variant="primary"> Create an Account </Button>
        </div>
      </div>
    </div>
  </div>
</section>
