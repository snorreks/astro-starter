---
// src/lib/components/layout/ThemeToggle.astro
---

<button
  id="theme-toggle"
  type="button"
  aria-label="Toggle theme"
  class="rounded-lg p-2.5 text-sm text-zinc-500 hover:bg-zinc-100 focus:ring-4 focus:ring-zinc-200 focus:outline-none dark:text-zinc-400 dark:hover:bg-zinc-700 dark:focus:ring-zinc-700"
>
  <svg
    id="theme-toggle-dark-icon"
    fill="currentColor"
    viewBox="0 0 20 20"
    xmlns="http://www.w3.org/2000/svg"
    class="hidden h-5 w-5"
  >
    <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
  </svg>
  <svg
    id="theme-toggle-light-icon"
    fill="currentColor"
    viewBox="0 0 20 20"
    xmlns="http://www.w3.org/2000/svg"
    class="hidden h-5 w-5"
  >
    <path
      clip-rule="evenodd"
      d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 5.05a1 1 0 00-1.414 1.414l.707.707a1 1 0 001.414-1.414l-.707-.707zM3 11a1 1 0 100-2H2a1 1 0 100 2h1z"
      fill-rule="evenodd"></path>
  </svg>
</button>

<script>
  // src/lib/components/layout/ThemeToggle.astro
  const themeToggleBtn = document.getElementById('theme-toggle');
  const darkIcon = document.getElementById('theme-toggle-dark-icon');
  const lightIcon = document.getElementById('theme-toggle-light-icon');

  const updateIcons = (theme: string | null) => {
    if (theme === 'dark') {
      darkIcon?.classList.remove('hidden');
      lightIcon?.classList.add('hidden');
    } else {
      darkIcon?.classList.add('hidden');
      lightIcon?.classList.remove('hidden');
    }
  };

  // Set initial icon state on page load
  // The 'theme' in localStorage is now guaranteed to be set by the inline script in Head.astro
  updateIcons(localStorage.getItem('theme'));

  themeToggleBtn?.addEventListener('click', () => {
    // Toggle the 'dark' class on the root <html> element
    const isDark = document.documentElement.classList.toggle('dark');
    // Determine the new theme
    const newTheme = isDark ? 'dark' : 'light';
    // Store the new theme preference
    localStorage.setItem('theme', newTheme);
    // Update the button icon to reflect the new theme
    updateIcons(newTheme);
  });

  // Optional: Listen for OS-level theme changes to keep the UI in sync
  // This is useful if the user changes their OS theme while the page is open
  globalThis.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
    // We only want to act on this if the user hasn't already overridden the theme
    // by clicking the toggle button. A theme in localStorage is the source of truth.
    if (!('theme' in localStorage)) {
      const newTheme = e.matches ? 'dark' : 'light';
      document.documentElement.classList.toggle('dark', newTheme === 'dark');
      // Update the icon to reflect the OS theme change
      updateIcons(newTheme);
    }
  });
</script>
