---
// src/lib/components/layout/head/Socials.astro
import { site } from '$data/site-content';

/**
 * Generates meta tags for social media sharing (Open Graph and Twitter Cards).
 * This helps social media platforms display rich previews of the page.
 */
type Props = {
  /** The canonical URL of the page. Required. */
  canonicalURL: string;
  /** The meta description of the page. Required. */
  description: string;
  /** The main image for the page. Required. */
  image: string;
  /** The title of the page. Required. */
  title: string;
  /** The type of page. Required. */
  type: 'website' | 'article';
};

const { title, description, image, canonicalURL, type } = Astro.props;
---

<meta content={type} property="og:type" />
<meta content={canonicalURL} property="og:url" />
<meta content={title} property="og:title" />
<meta content={description} property="og:description" />
<meta content={image} property="og:image" />
<meta content={site.name} property="og:site_name" />
<meta content="en_US" property="og:locale" />

<meta content="summary_large_image" property="twitter:card" />
<meta content={canonicalURL} property="twitter:url" />
<meta content={title} property="twitter:title" />
<meta content={description} property="twitter:description" />
<meta content={image} property="twitter:image" />

{site.social.twitter && <meta content={site.social.twitter} property="twitter:creator" />}
{site.social.twitter && <meta content={site.social.twitter} property="twitter:site" />}
