---
// src/lib/components/layout/Footer.astro
import { siteContent } from '$data/site-content'
import { getLangFromUrl, useTranslations } from '$utils/i18n'
const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<footer aria-labelledby="footer-heading" class="bg-gray-900 py-12 text-center text-white">
  <h2 id="footer-heading" class="sr-only">{t('footer.title')}</h2>
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <p class="text-sm leading-6 text-gray-300">{siteContent.footer.copyright}</p>
  </div>
</footer>
