---
// src/lib/components/blocks/Hero.astro
import type { HTMLAttributes } from 'astro/types'

/**
 * Hero Component
 * @description A full-width hero section with a title, subtitle, and a call-to-action button.
 */
type Props = HTMLAttributes<'section'> & {
  /**
   * Optional: Call-to-action button properties.
   */
  cta?: {
    text: string
    url: string
  }

  /**
   * The subtitle or introductory text.
   */
  subtitle: string

  /**
   * The main title of the hero section.
   */
  title: string
}

const { title, subtitle, cta, ...attrs } = Astro.props
---

<section
  class="relative flex min-h-[60vh] items-center justify-center bg-gray-900 py-20 text-center text-white"
  {...attrs}
>
  <div class="mx-auto max-w-4xl px-6">
    <h1 class="text-4xl font-extrabold tracking-tight text-white sm:text-5xl md:text-6xl">
      {title}
    </h1>
    <p class="mt-6 text-lg leading-8 text-gray-300">
      {subtitle}
    </p>
    {
      cta && (
        <div class="mt-10">
          <a
            href={cta.url}
            class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
          >
            {cta.text}
          </a>
        </div>
      )
    }
  </div>
</section>
